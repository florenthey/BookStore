extends layout
block content

    form(method="POST", action="/admin/register")

        #form-group
            label username
            input.form-control(name="username", type="text")

        #form-group
            label name
            input.form-control(name="name", type="text")

        #form-group
            label email
            textarea.form-control(name="email", type="email")

        #form-group
            label password
            textarea.form-control(name="password", type="password" placeholder="Entrez votre mot de passe")

        #form-group
            label password
            textarea.form-control(name="password2", type="password" placeholder="Confirmez votre mot de passe")

     
        br
        input.btn.btn-primary(type="submit", value="Submit")